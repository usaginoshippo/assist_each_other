<div class="contents row">
  <div class="container">
    <h2>Edit Account</h2>
    <h2>ユーザー情報 編集ページ</h2>

    <%= form_with model: current_user, local: true do |f| %>
      <%# <%= render "devise/shared/error_messages", resource: resource %> 

      <div class="field">
        <%= f.label :name %> <em>(6 文字未満)</em><br />
        <%= f.text_field :name, autofocus: true, maxlength: "6" %>
      </div>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email %>
      </div>

      <div class="field">
        <%= f.label :password %> <i>(変更なければ空欄でOK)</i>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> 文字以上)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "on" %>
      </div>
   
      <div>
        <%= f.label :assist, "お手伝いお願いします" %>
        <%= f.radio_button :assist, :true %>
      
        <%= f.label :assist, "今のところ大丈夫です" %>
        <%= f.radio_button :assist, :false %>
      </div>
      <br>
      <div class="field">
        <%= f.label :assist1 %><br />
        <%= f.select(:assist1, ["買い物", "掃除", "洗濯", "除雪", "排雪", "その他"])%>
      </div>

      <div class="field">
        <%= f.label :assist2 %><br />
        <%= f.select(:assist2, ["買い物", "掃除", "洗濯", "除雪", "排雪", "その他"])%>
      </div>

      <div class="field">
        <%= f.label :memo %><br />
        <%= f.text_area :memo, size:"30x10" %>
      </div>

      <div class="actions">
        <%= f.submit "更新する" %>
      </div>
    <% end %>



